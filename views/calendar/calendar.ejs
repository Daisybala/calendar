<%- include('../partials/header') %>

<header>
<h1>welcome <%= user.name%></h1>
</header>

<h2>
<a href="/calendar?year=<%= year %>&month=<%= month - 1 %>">&lt;</a>
<%= `${monthNames[month]}, ${year}` %>
<a href="/calendar?year=<%= year %>&month=<%= month + 1 %>">&gt;</a>
</h2>

<section id="calendar">
    <div>Sun</div>
    <div>Mon</div>
    <div>Tue</div>
    <div>Wed</div>
    <div>Thu</div>
    <div>Fri</div>
    <div>Sat</div>
    <% for (let day = 1; day <= numDaysInMO; day++) { %>
        <% if (day === 1) { %>
            <a href="/year/<%= year %>/month/<%= month %>/day/<%= day %>"><div class="calendar-day" style="grid-column: <%= dow %>;"><%= day %></div></a>
        <% } else {%>
            <a href="/year/<%= year %>/month/<%= month %>/day/<%= day %>"><div class="calendar-day"><%= day %></div></a>
        <% } %>
    <% } %>
</section>


<%- include('../partials/footer') %>