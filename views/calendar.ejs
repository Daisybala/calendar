<%- include('./partials/header') %>

<h2>
<a href="/calendar?year=<%= year %>&month=<%= month - 1 %>">&lt;</a>
<%= monthNames[month] %>, <%= year %>
<a href="/calendar?year=<%= year %>&month=<%= month + 1 %>">&gt;</a>
</h2>

<section>
    <div>Sun</div>
    <div>Mon</div>
    <div>Tue</div>
    <div>Wed</div>
    <div>Thu</div>
    <div>Fri</div>
    <div>Sat</div>
    <% for (let day = 1; day <= numDaysInMO; day++) { %>
        <% if (day === 1) { %>
            <div style="grid-column: <%= dow %>;"><%= day %></div>
        <% } else {%>
        <div><%= day %></div>
        <% } %>
    <% } %>
</section>

<%- include('./partials/footer') %>